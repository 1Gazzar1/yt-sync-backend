{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
